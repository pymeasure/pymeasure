{
    "problemMatcher": [
        {
            "owner": "sphinx",
            "pattern": [
                {
                    "regexp": "^(?<path>.+?):(?<message>.*? (?<severity>WARNING|ERROR): .+)$",
                    "file": 1,
                    "severity": 3,
                    "message": 2
                }
            ]
        },
        {
            "owner": "sphinx-doctest",
            "pattern": [
                {
                    "regexp": "^File \\\"(?<path>.+?)\\\", line (?<line>\\d+|\\?), (?<msg>.*$)",
                    "file": 1,
                    "line": 2,
                    "message": 3
                }
            ]
        }
    ]
}
